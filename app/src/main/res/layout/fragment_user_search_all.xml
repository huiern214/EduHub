<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent" tools:context=".user_search_all">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginHorizontal="15dp" android:orientation="vertical">
                <TextView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="15dp" android:layout_marginStart="5dp" android:fontFamily="sans-serif-condensed-medium" android:textSize="20sp" android:textStyle="bold" android:text="@string/videos"/>
                <HorizontalScrollView android:layout_width="match_parent" android:layout_height="wrap_content" android:scrollbars="none">
                    <androidx.recyclerview.widget.RecyclerView android:id="@+id/uploaded_videos" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" tools:listitem="@layout/fragment_home_video"> </androidx.recyclerview.widget.RecyclerView>
                </HorizontalScrollView>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginHorizontal="15dp" android:orientation="vertical">
                <TextView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="15dp" android:layout_marginStart="10dp" android:fontFamily="sans-serif-condensed-medium" android:textSize="20sp" android:textStyle="bold" android:text="@string/notes"/>
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
                    <androidx.recyclerview.widget.RecyclerView android:id="@+id/uploaded_notes" android:layout_width="match_parent" android:layout_height="wrap_content" tools:listitem="@layout/row_notes"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

